{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "singleQuote": true,
  "experimentalSortImports": {
    "newlinesBetween": false,
  },
  "experimentalSortPackageJson": {
    "sortScripts": true,
  },
  "experimentalTailwindcss": {
    "stylesheet": "client/src/App.css",
  },
  "ignorePatterns": [
    "coverage/",
    "dist/",
    "client/dist/",
    "client/src/fate.ts",
    "client/src/translations/",
    "server/dist",
    "pnpm-lock.yaml",
  ],
}
