{
  "name": "fate-app",
  "version": "0.0.1",
  "private": true,
  "description": "fate is a modern data client for React.",
  "author": "Christoph Nakazawa <christoph.pojer@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/nkzw-tech/fate-template.git"
  },
  "type": "module",
  "scripts": {
    "build": "dotenv -e server/.env -- pnpm run -r build",
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "cd client && pnpm dev",
    "dev:server": "cd server && pnpm dev",
    "dev:setup": "pnpm -r dev:setup",
    "fate:generate": "pnpm run -r fate:generate",
    "format": "oxfmt",
    "lint": "eslint --cache .",
    "lint:format": "oxfmt --check .",
    "preinstall": "command -v git >/dev/null 2>&1 && git config core.hooksPath git-hooks || exit 0",
    "prisma": "cd server && pnpm prisma",
    "test": "npm-run-all --parallel tsc:check vitest:run lint lint:format",
    "tsc": "pnpm tsgo",
    "tsc:check": "tsgo",
    "vitest:run": "vitest run"
  },
  "devDependencies": {
    "@app/server": "workspace:*",
    "@nkzw/eslint-config": "^3.3.0",
    "@nkzw/find-workspaces": "^1.0.0",
    "@swc/core": "^1.15.10",
    "@types/node": "^25.0.10",
    "@typescript/native-preview": "7.0.0-dev.20260122.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "npm-run-all2": "^8.0.4",
    "oxc-minify": "^0.110.0",
    "oxfmt": "^0.26.0",
    "prisma": "^7.3.0",
    "ts-node": "^10.9.2",
    "tsdown": "0.20.0-beta.4",
    "vite": "8.0.0-beta.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  }
}
